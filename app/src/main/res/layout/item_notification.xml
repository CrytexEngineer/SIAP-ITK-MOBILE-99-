<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_tv_notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir"
            android:textColor="#A6A6A6"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            tools:text="22 April 2020" />


        <TextView
            android:id="@+id/item_notification_img_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/avenir"
            android:layout_marginTop="24dp"
            android:src="@drawable/badge_polygon_check"
            android:layout_below="@id/item_tv_notification_date"
            />


        <TextView
            android:id="@+id/item_tv_notification_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_notification_title"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/item_notification_img_badge"
            android:drawablePadding="5dp"
            android:fontFamily="@font/avenir_roman"
            android:textSize="12sp"
            tools:text="09:45 " />


        <TextView
            android:id="@+id/item_tv_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_tv_notification_date"

            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/item_notification_img_badge"
            android:fontFamily="@font/avenir"
            android:textColor="#22272C"
            android:textSize="12sp"
            android:text="Absensi Presensi" />


    <TextView
        android:id="@+id/item_tv_notification_content"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:layout_below="@id/item_tv_notification_time"
        android:layout_marginLeft="16dp"
        android:background="#F7F8FD"
        android:layout_marginBottom="16dp"
        android:paddingStart="12dp"
   android:padding="8dp"
        android:layout_toRightOf="@id/item_notification_img_badge"
        android:fontFamily="@font/avenir_roman"
        android:textSize="12sp"
        tools:text="Kamu memiliki 2 matakuliah dengan absensi dibawah 70%" />






    </RelativeLayout>


</FrameLayout>